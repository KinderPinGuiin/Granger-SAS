{% extends 'base.html.twig' %}

{% block title %}Admin - Documents fournis{% endblock %}

{% block javascripts %}
    <script src="/js/admin/search_bar.js" defer></script>
{% endblock %}

{% block body %}
    <div>
        {% include "require/admin/search_bar.html.twig" %}
    </div>
    {% for user in users %}
        <a href="{{ path('admin_user', {id: user.id}) }}" data-search="true">
            Traiter les documents de {{ user.prenom }} {{ user.nom }}
        </a>
        <br/>
    {% endfor %}
{% endblock %}