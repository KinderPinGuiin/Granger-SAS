{% apply inline_css %}
<style>
    header {
        display: flex;
    }

    a {
        padding: 0 10px 0 0;
        height: 50px;
    }

    a img {
        width: 50px;
        height: 50px;
    }

    h1, p {
        font-family: "Montserrat", sans-serif;
    }

    h1 {
        font-size: 30px;
        line-height: 50px;
        margin: 0;
    }

    p {
        font-size: 1.2rem;
        padding-left: 20px;
    }
</style>

<header>
    <a href="{{ app.request.getSchemeAndHttpHost() ~ path("profil") }}">
        <img src="{{ email.image('/emails/embed/logo_n.png') }}" alt="Logo Granger SAS">
    </a>
    <h1>Votre Candidature chez Granger SAS pour le poste "{{ poste }}"</h1>
</header>

<section>
    <p>
        Bonjour {{ candidat.prenom }} {{ candidat.nom }},<br/>
        {{ message|raw }}<br/>
    </p>
</section>
{% endapply %}