{% block form_row %}
    <div class="form_row">
        {% if errors|length > 0 %}
            <div class="error">
                {% for error in errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
        {{ form_label(form) }} {{ form_widget(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    <span class="error">                
        {% for error in errors %}
            {{ error.message }}
        {% endfor %}
    </span>
{% endblock %}