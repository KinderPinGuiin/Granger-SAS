{% extends 'base.html.twig' %}

{% block title %}Profil - {{ user.prenom }} {{ user.nom }}{% endblock %}

{% block body %}
    {# Informations #}
    <h1>Profil de {{ user.prenom }} {{ user.nom }}</h1>
    {# Candidatures #}
    <h2>Candidatures</h2>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for candidature in candidatures %}
                <tr>
                    <td>{{ candidature.date|date("d/m/Y") }}</td>
                    <td>{% if candidature.acceptee %} Acceptée {% else %} Refusée {% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {# Bouton suppression #}
    <a href="">Supprimer le compte</a>
{% endblock %}
